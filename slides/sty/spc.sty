% LaTeX package to create slides in SPC Secretariat format

% History
% 1.0  12 Jan 2022  AM created, based on ices.sty and gfcm.sty
% 1.1  31 Mar 2022  AM added package tikz and command \I to adjust row height

\ProvidesPackage{spc}

% --------------
% 1 Dependencies
% --------------

% 1.1 Packages
\usepackage{listings}
\usepackage{tikz}

% 1.2 Banner and logo
\graphicspath{{figs/}}

% ----------
% 2 Settings
% ----------

% 2.1 Character
\frenchspacing
\lstset{basicstyle=\ttfamily,literate={~}{$\sim$}{2}}

% 2.2 Color
\definecolor{darkblue}{rgb}{0.1,0.3,0.5}
\definecolor{blue}{rgb}{0.0,0.4,0.7}
\definecolor{darkgray}{rgb}{0.2,0.2,0.2}
\definecolor{gray}{rgb}{0.6,0.6,0.6}
\definecolor{darkgreen}{rgb}{0.1,0.4,0.4}
\definecolor{green}{rgb}{0.0,0.6,0.5}
\definecolor{orange}{rgb}{0.9,0.3,0.2}
\setbeamercolor{palette primary}{fg=white,bg=darkblue}
\setbeamercolor{item}{fg=darkgreen,bg=white}

% 2.3 Slide title
\setbeamercolor{frametitle}{fg=darkgray}
\setbeamerfont{frametitle}{size=\large,series=\bfseries}

% 2.4 List
\setbeamertemplate{itemize item}{\scriptsize\raise1.25pt
  \hbox{\donotcoloroutermaths$\blacktriangleright$}}

% 2.5 Footer
\setbeamertemplate{navigation symbols}{}

% 2.6 Margins
\setbeamersize{text margin left=5ex, text margin right=5ex}
\setbeamertemplate{frametitle}{\vspace{3ex}\insertframetitle}

% 2.7 Background
\setbeamertemplate{background}{
  \begin{picture}(0,0)
    \put(374,-37.6){
      \includegraphics[width=21.6mm]{spc-logo}
    }
  \end{picture}
}

% 2.8 Title page
\newcommand\titlepos{-20}
\newcommand\authorpos{-100}
\newcommand\datepos{-120}
\setbeamercolor{title}{fg=darkgray}
\setbeamercolor{author}{fg=darkgray}
\setbeamercolor{date}{fg=darkgray}
\setbeamerfont{title}{series=\LARGE\bfseries}
\setbeamerfont{author}{size=\footnotesize}
\setbeamerfont{date}{size=\footnotesize}
\setbeamertemplate{title page}{
  \usebackgroundtemplate{}
  \begin{picture}(0,0)
    \put(-27.97,61){
      \includegraphics[width=\paperwidth]{spc-banner}
    }
    \put(-3,\titlepos){
      \begin{minipage}{\textwidth}
        \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle
      \end{minipage}
    }
    \put(-3,\authorpos){
      \begin{minipage}{\textwidth}
        \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor
      \end{minipage}
    }
    \put(-3,\datepos){
      \begin{minipage}{\textwidth}
        \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate
      \end{minipage}
    }
  \end{picture}
}

